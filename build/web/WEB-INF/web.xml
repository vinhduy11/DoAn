<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>Controllers.Welcome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>Controllers.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verifyUserController</servlet-name>
        <servlet-class>Controllers.verifyUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Account_Details</servlet-name>
        <servlet-class>Controllers.Account_Details</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductList</servlet-name>
        <servlet-class>Controllers.ProductList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductItem</servlet-name>
        <servlet-class>Controllers.ProductItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>Controllers.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutController</servlet-name>
        <servlet-class>Controllers.CheckoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmPaymentController</servlet-name>
        <servlet-class>Controllers.ConfirmPaymentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verifyUserController</servlet-name>
        <url-pattern>/verifyUserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Account_Details</servlet-name>
        <url-pattern>/Account_Details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductList</servlet-name>
        <url-pattern>/Product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductItem</servlet-name>
        <url-pattern>/Item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutController</servlet-name>
        <url-pattern>/Checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmPaymentController</servlet-name>
        <url-pattern>/ConfirmPayment</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>1440</session-timeout>
    </session-config>
</web-app>
